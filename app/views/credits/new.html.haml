= render "shared/header"
.mypage__credit--new

  .mypage__credit--inner
    = render partial: 'users/side'

    .content__wrapper
      .content__title
        %h2 クレジットカード情報入力

      .content__form--wrapper
        = form_tag("#", method: :post) do
          .content__form--input.first
            %label
              %p.content__form--required カード番号
              = text_field_tag "number", "", placeholder: "半角数字のみ" , type: "text"
          
          .content__form--input
            %label
              %p.content__form--required 有効期限
              .content__form--select
                %select#exp_month{name: "exp_month", type: "text"}
                  %option{value: ""} --
                  %option{value: "1"}01
                  %option{value: "2"}02
                  %option{value: "3"}03
                  %option{value: "4"}04
                  %option{value: "5"}05
                  %option{value: "6"}06
                  %option{value: "7"}07
                  %option{value: "8"}08
                  %option{value: "9"}09
                  %option{value: "10"}10
                  %option{value: "11"}11
                  %option{value: "12"}12
                %p.content__form--month 月
                %select#exp_year{name: "exp_year", type: "text"}
                  %option{value: ""} --
                  %option{value: "2020"}20
                  %option{value: "2021"}21
                  %option{value: "2022"}22
                  %option{value: "2023"}23
                  %option{value: "2024"}24
                  %option{value: "2025"}25
                  %option{value: "2026"}26
                  %option{value: "2027"}27
                  %option{value: "2028"}28
                  %option{value: "2029"}29
                  %option{value: "2030"}30
                %p.content__form--age 年

          .content__form--input
            %label
              %p.content__form--required セキュリティコードコード
              = text_field_tag "cvc", "", placeholder: "カード背面3~4桁の番号"
          = submit_tag "登録する", class: "content__form--btn"

= render "shared/footer"
= render "shared/purchase-btn"