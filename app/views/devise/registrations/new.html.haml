.signin
  = render "devise/shared/error_messages", resource: resource
  .content__wrapper
    .content__title
      %h1 会員情報入力

    .content__form--wrapper
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .content__form--input
          %label
            %p ニックネーム
            %br/
            = f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "例）メルカリ太郎"
        .content__form--input
          %label
            %p eメール
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
        .content__form--input
          %label
            %p パスワード
            - if @minimum_password_length
              %em
                = "(#{@minimum_password_length} 文字以上で入力してください)"
            %br/
            = f.password_field :password, autocomplete: "new-password", placeholder: "７文字以上の半角英数字で入力"
        .content__form--input
          %label
            %p パスワード（確認用）
            %br/
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認のためもう一度入力してください"
        .content__form--input
          %label
            %p 姓
            %br/
            = f.text_field :family_name, autofocus: true, autocomplete: "family-name", placeholder: "例）山田"
        .content__form--input
          %label
            %p 名
            %br/
            = f.text_field :last_name, autofocus: true, autocomplete: "given-name", placeholder: "例）綾"
        .content__form--input
          %label
            %p 姓（フリガナ）
            %br/
            = f.text_field :family_name_kana, autofocus: true, autocomplete: "family-name", placeholder: "例）ヤマダ"
        .content__form--input
          %label
            %p 名（フリガナ）
            %br/
            = f.text_field :last_name_kana, autofocus: true, autocomplete: "given-name", placeholder: "例）アヤ"
