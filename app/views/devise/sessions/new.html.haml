.login
  .logo__wrapper
    = image_tag "logo.svg", alt: "logo"

  .content__wrapper

    .content__signup--wrapper
      %p.content__signup--attention
        アカウントをお持ちでない方はこちら
      =link_to new_registration_path(resource_name), class:"content__signup--link" do
        新規会員登録

    .content__form--wrapper
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .content__form--input.first
          %label
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
        .content__form--input
          %label
            = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード"

        = f.submit "ログイン",class: "content__form--btn"
      